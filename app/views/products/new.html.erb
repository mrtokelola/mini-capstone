<h1>New product</h1>
<%= form_tag "/products", method: "post" do %>
  <div class="form_group">
  Name: <input type="text" class="form-control" name="form_name">
  </div>
  <div class="form-group">
    Price: <input type="text" class="form-control" name="form_price">
  </div>
  <div class="form-group">
    Description: <input type="text" class="form-control" name="form_description">
  </div>
  <div class="form-group">
    Image Url: <input type="text" class="form-control" name="form_image">
  </div>
  <input type="submit" class="btn btn-default" value="Submit Info">
<% end %>