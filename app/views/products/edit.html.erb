<h1>Edit product</h1>
<%= form_tag "/product/#{@product.id}", method: "patch" do %>
  <div class="form-group">
    Name: <input type="text" class="form-control" value="<%= @product.name %>" name="form_title">
  </div>
  <div class="form-group">
    Price: <input type="text" class="form-control" value="<%= @product.price %>" name="form_chef">
  </div>
  <div class="form-group">
    Description: <input type="text" class="form-control" value="<%= @product.description %>" name="form_ingredients">
  </div>
  <div class="form-group">
    Image Url: <input type="text" class="form-control" value="<%= @product.image %>" name="form_directions">
  </div>
  <input type="submit" class="btn btn-default" value="Edit product">
<% end %>