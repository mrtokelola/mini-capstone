<h1>Edit product</h1>
<%= form_tag "/products/#{@product.id}", method: "patch" do %>
  <div class="form-group">
    Name: <input type="text" class="form-control" value="<%= @product.name %>" name="name">
  </div>
  <div class="form-group">
    Price: <input type="text" class="form-control" value="<%= @product.price %>" name="price">
  </div>
  <div class="form-group">
    Description: <input type="text" class="form-control" value="<%= @product.description %>" name="description">
  </div>
  <div class="form-group">
    Image Url: <input type="text" class="form-control" value="<%= @product.image %>" name="image">
  </div>
  <input type="submit" class="btn btn-default" value="Edit product">
<% end %>